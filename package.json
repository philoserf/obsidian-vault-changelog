{
  "name": "obsidian-vault-changelog",
  "version": "1.2.0",
  "description": "Maintain a changelog of recently edited notes in Obsidian",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "bun run build.ts --watch",
    "build": "bun run check && bun run build.ts",
    "check": "biome check .",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "validate": "bun run scripts/validate-plugin.ts",
    "version": "bun run version-bump.ts",
    "prepublishOnly": "bun run validate"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "changelog"
  ],
  "author": "Mark Ayers",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.4.3",
    "@types/bun": "^1.3.9",
    "@types/node": "25.3.0",
    "obsidian": "^1.12.2",
    "typescript": "^5.9.3"
  }
}
